{
    "manifest_version": 2,
    "name": "transmit",
    "version": "1.3",
    "description": "Adds a context menu option for sending magnet URLs to transmission web client.",
    "icons": {
      "16": "icon/icon-16.png",
      "32": "icon/icon-32.png",
      "48": "icon/icon-48.png",
      "96": "icon/icon-96.png",
      "128": "icon/icon-128.png"
    },
    "applications": {
      "gecko": {
        "id": "{c0e69000-58b9-446a-9936-783f2f88682e}"
      }
    },
    "options_ui": {
      "page": "options.html"
    },
    "background": {
      "scripts": ["transmit-background.js"],
      "persistent": false
    },
    "permissions": ["contextMenus", "notifications", "storage", "<all_urls>"]
  }
